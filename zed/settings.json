{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": "12.7.0.0.1:2080",
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },

  "theme": "Catppuccin Latte",
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "cursor_shape": "underline",
  "relative_line_numbers": true,
  "icon_theme": "Catppuccin Latte",

  "vim_mode": true,

  "languages": {
    "Python": {
      "language_servers": ["!pylsp", "pyright"]
    }
  },

  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "venvPath": "$HOME/.pyenv/"
        }
      }
    },
    "tinymist": {
      "settings": {
        "exportPdf": "never"
      }
    }
  },
  "autosave": "on_focus_change"
}
